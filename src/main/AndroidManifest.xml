<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile_development.damon.projectb" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity_Login"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Register"
            android:label="@string/title_activity_register"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".Activity_Dashboard"
            android:label="@string/title_activity_activity__dashboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity_New_Project"
            android:label="@string/title_activity_activity_new_project"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity_Assign_Project"
            android:label="@string/title_activity_activity_assign_project" >
        </activity>
    </application>

</manifest>
