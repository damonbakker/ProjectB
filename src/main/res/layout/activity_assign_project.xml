<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_assign_project"
    tools:context="mobile_development.damon.projectb.Activity_Assign_Project">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_assign_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:transitionName="actionBar"
        app:popupTheme="@style/ActionBarPopupThemeOverlay"/>

    <RelativeLayout
        android:layout_below="@id/toolbar_assign_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/project_progress"
            android:layout_width="220dp"
            android:layout_height="45dp"
            app:rcBackgroundColor="@color/custom_progress_background"
            app:rcBackgroundPadding="5dp"
            app:rcMax="100"
            app:rcProgress="50"
            app:rcProgressColor="@color/custom_progress_orange_progress"
            app:rcRadius="5dp"
            android:layout_below="@+id/project_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/project_name"
            android:transitionName="project_name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_account_box_24dp"
            android:layout_marginBottom="39dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView4" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView4"
            android:src="@drawable/ic_add_box_24dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView5"
            android:src="@drawable/ic_add_box_24dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add student"
            android:id="@+id/textView5"

            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Peter"
            android:id="@+id/textView6"
            android:layout_marginLeft="-10dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/project_progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add student"
            android:id="@+id/textView7"

            android:layout_below="@+id/imageView5"
            android:layout_alignEnd="@+id/imageView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="45 minutes"
            android:id="@+id/textView3"
            android:layout_below="@+id/project_progress"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:src="@drawable/ic_placeholder_24dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/project_progress"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_placeholder_two_24dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignEnd="@+id/project_progress" />
    </RelativeLayout>

</RelativeLayout>
