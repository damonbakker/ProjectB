<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile_development.damon.projectb.Fragment_Feedback">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:id="@+id/userInput_feedback"
        android:background="@drawable/rounded_corner"
        android:hint="@string/hint_feedback"
        android:width="280dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:textColorHint="#000000"
        android:gravity="top|left"
        android:maxLength="300"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send feedback"
        android:id="@+id/button_feedback"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/userInput_feedback"
        android:layout_alignStart="@+id/userInput_feedback"
        android:layout_alignEnd="@+id/userInput_feedback"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thank you for trying out ProjectB. If there are any bugs or feedback you would like report then you are at the right place."
        android:id="@+id/textView_feedback_info"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userInput_feedback"
        android:layout_alignEnd="@+id/userInput_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/feedback_charcounter"

        android:layout_below="@+id/textView_feedback_info"
        android:layout_toStartOf="@+id/textView2"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:text="/300"
        android:layout_below="@+id/textView_feedback_info"
        android:layout_alignEnd="@+id/textView_feedback_info" />


</RelativeLayout>
